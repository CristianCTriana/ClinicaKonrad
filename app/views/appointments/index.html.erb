<h1>Appointments</h1>
<table>
  <thead>
    <tr>
      <th>Nombre medico</th>
      <th>Apellido medico</th>
      <th>Nombre paciente</th>
      <th>Apellido paciente</th>
      <th>Nombre del consiltorio</th>
      <th>Codigo del consultorio</th>
      <th>Ubicacion del consultorio</th>
      <th>Fecha cita</th>
      <th>Hora inicio</th>
      <th>Hora fin</th>
      <th>Motivo</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @appointments.each do |appointment| %>
      <tr>
        <!--<td><%= appointment.consulting_room_id %></td>
        <td><%= appointment.patient_id %></td>
        <td><%= appointment.medic_id %></td>-->
        <td><%= Medic.find_by(id: appointment.medic_id).nombre %></td>
        <td><%= Medic.find_by(id: appointment.medic_id).apellido %></td>
        <td><%= Patient.find_by(id: appointment.patient_id).nombre %></td>
        <td><%= Patient.find_by(id: appointment.patient_id).apellido %></td>
        <td><%= ConsultingRoom.find_by(id: appointment.consulting_room_id).nombre %></td>
        <td><%= ConsultingRoom.find_by(id: appointment.consulting_room_id).codigo %></td>
        <td><%= ConsultingRoom.find_by(id: appointment.consulting_room_id).ubicacion %></td>
        <td><%= appointment.fecha_cita %></td>
        <td><%= appointment.hora_inicio %></td>
        <td><%= appointment.hora_fin %></td>
        <td><%= appointment.motivo %></td>
        <td><%= link_to 'Show', appointment %></td>
        <td><%= link_to 'Edit', edit_appointment_path(appointment) %></td>
        <!--<td><%= link_to 'Destroy', appointment, method: :delete, data: { confirm: 'Are you sure?' } %></td>-->
      </tr>
    <% end %>
  </tbody>
</table>

<br>

